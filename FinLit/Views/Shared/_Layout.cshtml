        <symbol id="people-circle" viewBox="0 0 16 16">
            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"></path>
            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"></path>
        </symbol>

    </svg>

    @functions {
        public string IsActive(string url)
        {
            var currentUrl = Context.Request.Path.Value?.ToLowerInvariant();
            return currentUrl != null && currentUrl.StartsWith(url.ToLowerInvariant()) ? "active" : "";
        }
    }

    @RenderSection("Scripts", required: false)
</head>
<body>
   
    <header>
        <div class="px-3 py-2 text-bg-dark">
            <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">

                    <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
                        <li>
                            <a href="/Home/Index" class="nav-link text-white">
                                <svg class="bi d-block mx-auto mb-1" fill="white" width="24" height="24"><use xlink:href="#home"></use></svg>
                                Главная
                            </a>
                        </li>
                        <li>
                            <a href="/Category/CategoryView" class="nav-link text-white">
                                <svg class="bi d-block mx-auto mb-1" fill="white" width="24" height="24"><use xlink:href="#grid"></use></svg>
                                Категории
                            </a>
                        </li>
                        <li>
                            <a href="/Notification/NotificationView" class="nav-link text-white">
                                <svg class="bi d-block mx-auto mb-1" fill="white" width="24" height="24"><use xlink:href="#bell"></use></svg>
                                Уведомления
                            </a>
                        </li>
                        <li>
                            <a href="/Settings/SettingsView" class="nav-link text-white">
                                <svg class="bi d-block mx-auto mb-1" fill="white" width="24" height="24"><use xlink:href="#gear"></use></svg>
                                Настройки
                            </a>
                        </li>

                       @*  <li>
                            <a href="/Home/Index" class="nav-link text-white">
                                <svg class="bi d-block mx-auto mb-1" fill="white" width="24" height="24"><use xlink:href="#people-circle"></use></svg>
                                Подписка
                            </a>
                        </li> *@
                    </ul>

                </div>
            </div>
        </div>      
    </header>

    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm">
        <div class="container">

            <a class="navbar-brand fw-bold d-flex align-items-center" href="/">
                <!-- Иконка выхода -->
                <svg class="bi d-block mx-auto mb-1" fill="black" width="24" height="24">
                    <use xlink:href="#power"></use>
                </svg>
                FinLit.By
                <!-- Определение символа иконки выхода -->
                <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                    <symbol id="power" viewBox="0 0 16 16">
                        <path d="M11.5 0h-7a1 1 0 0 0-1 1v4h1V2h6v3h1V1a1 1 0 0 0-1-1zM8 5a3 3 0 1 1-3 3 3 3 0 0 1 3-3zm0 5a5 5 0 1 0 5 5 5 5 0 0 0-5-5z" />
                    </symbol>
                </svg>
            </a>

            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @IsActive("/Home/Index")" href="/Home/Index">Главная</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @IsActive("/Transaction/TransactionView")" href="/Transaction/TransactionView">Операции</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @IsActive("/Report/ReportView")" href ="/Report/ReportView">Отчеты</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @IsActive("/RecurringTransaction/CalendarView")" href="/RecurringTransaction/CalendarView">Календарь</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @IsActive("/DebtTracker/DebtTrackerView")" href="/DebtTracker/DebtTrackerView">Долги</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @IsActive("/FinancialGoalAccount/FinancialGoalAccountView")" href="/FinancialGoalAccount/FinancialGoalAccountView">Цели</a>
                    </li>
                   @*  <li class="nav-item">
                        <a class="nav-link" href="/Home/About">Сбережения</a>
                    </li> *@
                </ul>
            </div>
        </div>
    </nav>

    
    <div class="container mt-5">
        @RenderBody() 
    </div>

    <footer>
        @if (IsSectionDefined("Footer"))
        {
            @RenderSection("Footer")
        }
        else
        {
            <span>Содержание элемента footer по умолчанию.</span>
        }
    </footer>

    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>