@model FinLit.ViewModels.CategoryFormViewModel

<form asp-action="EditCategory" method="post" class="card p-4 shadow-sm rounded-4">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="CategoryName" class="form-label">Название категории</label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Тип категории</label>
        <input type="text" class="form-control" value="@Model.CategoryType" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Изображение категории</label>
        @if (!string.IsNullOrEmpty(Model.CategoryImage))
        {
                <img src="@Model.CategoryImage" alt="Category Image" style="height:60px;" class="d-block mb-2" />
        }
        <input asp-for="CategoryImage" class="form-control" />
        <span asp-validation-for="CategoryImage" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-between mt-4">
        <div>
            <button type="submit" class="btn btn-primary">Сохранить изменения</button>
        </div>
        <div>
            <a asp-action="CategoryView" class="btn btn-secondary ms-2">Назад</a>
        </div>
    </div>

</form>

@section Footer {
    <footer class="text-center text-muted mt-4">Copyright © FinLit.by, @DateTime.Now.Year. All rights reserved</footer>
}